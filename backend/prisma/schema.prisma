model Note {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String    @unique
  description String
  subNotes    SubNote[]
}

model SubNote {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String
  longDetail String
  noteId     Int
  note       Note     @relation(fields: [noteId], references: [id])
}
